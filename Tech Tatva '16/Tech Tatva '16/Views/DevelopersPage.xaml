                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </GridViewItem.ContentTemplate>
                        </GridViewItem>
                        </GridView>
                    </Viewbox>
                </StackPanel>

                <StackPanel Grid.Row="1">
                    <TextBlock Margin="10" Text="iOS" FontFamily="Segoe WP" FontSize="40" FontWeight="Light" />

                    <Viewbox>
                        <GridView>

                            <GridView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapGrid Orientation="Horizontal" MaximumRowsOrColumns="2"/>
