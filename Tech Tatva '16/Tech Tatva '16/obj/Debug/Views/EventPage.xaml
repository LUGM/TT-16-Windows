<Page
    x:Class="Tech_Tatva__16.Views.EventPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Tech_Tatva__16.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{StaticResource BackgroundBrush}">

    <Grid x:Name="LayoutRoot">

        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Panel -->
        <StackPanel Grid.Row="0" Margin="10,0,0,0">
            <TextBlock Text="techTatva" FontSize="47" Margin="0,12,0,0" Foreground="{StaticResource AppAccentColorBrush}"/>
            <TextBlock Text="Event Name" Margin="0,6.5,0,15" FontSize="25" CharacterSpacing="{ThemeResource PivotHeaderItemCharacterSpacing}" Foreground="{StaticResource AppAccentColorBrush}"/>
            <Line X1="0" X2="1" Stretch="Fill" Stroke="SkyBlue" StrokeThickness="1" Margin="-10,3,0,0"/>
        </StackPanel>

        <!--TODO: Content should be placed within the following grid-->
        <StackPanel Grid.Row="1">
            <TextBlock Text="Basic event data recieved from admin/server will be placed here" FontSize="20" TextWrapping="Wrap" TextAlignment="Center" Margin="0,20,0,20" />
            <Line X1="0" X2="1" Stretch="Fill" Stroke="SkyBlue" StrokeThickness="1" Margin="-10,0,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="10,40,0,0" Orientation="Horizontal">
            <Image Source="/Assets/loc-icon.png" Height="25" Width="25"></Image>
            <TextBlock Text="NLH 203" FontSize="25" Margin="10,0,0,0"></TextBlock>
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="10,0,0,0" Orientation="Horizontal">
            <Image Source="/Assets/time-icon.png" Height="25" Width="25"></Image>
            <TextBlock Text="2 pm to 5 pm" FontSize="25" Margin="10,0,0,0"></TextBlock>
        </StackPanel>

        <StackPanel Grid.Row="4" Margin="10,0,0,0" Orientation="Horizontal">
            <Image Source="/Assets/date-icon.png" Height="25" Width="25"></Image>
            <TextBlock Text="26 May 2016" FontSize="25" Margin="10,0,0,0"></TextBlock>
        </StackPanel>

        <StackPanel Grid.Row="5" Margin="10,0,0,0" Orientation="Horizontal">
            <Image Source="/Assets/group-icon.png" Height="25" Width="25"></Image>
            <TextBlock Text="2-3 per team" FontSize="25" Margin="10,0,0,0"></TextBlock>
        </StackPanel>

        <StackPanel Grid.Row="6" Margin="10,0,0,0" Orientation="Horizontal">
            <Image Source="/Assets/phone-icon.png" Height="25" Width="25"></Image>
            <TextBlock Text="9945616566" FontSize="25" Margin="10,0,0,0"></TextBlock>
        </StackPanel>

        <StackPanel Grid.Row="7" Margin="0,30,0,0">
            <Line X1="0" X2="1" Stretch="Fill" Stroke="SkyBlue" StrokeThickness="1"/>
            <StackPanel Orientation="Horizontal" Margin="10,5,0,5">
                <Image Source="/Assets/fav-icon.png" Height="25" Width="25"></Image>
                <TextBlock Text="bookmark event" FontSize="25" Margin="10,0,0,0"></TextBlock>
            </StackPanel>
            <Line X1="0" X2="1" Stretch="Fill" Stroke="SkyBlue" StrokeThickness="1"/>
        </StackPanel>
    </Grid>
</Page>

