<Page
    x:Class="Tech_Tatva__16.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Tech_Tatva__16.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{StaticResource BackgroundBrush}"
    DataContext="{Binding DefaultViewModel , RelativeSource={RelativeSource Self}}"
    >

    
    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.SecondaryCommands>
                <AppBarButton x:Name="Fav" Label="favourites"/>
                <AppBarButton x:Name="Res" Label="results"/>
                <AppBarButton x:Name="Dev" Label="developers"/>
                <AppBarButton x:Name="Abt" Label="about"/>
            </CommandBar.SecondaryCommands>
            <AppBarButton Icon="Refresh" Label="refresh"/>
        </CommandBar>
    </Page.BottomAppBar>

    <Page.Resources>
        <Style TargetType="HubSection">
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"
                           FontSize="40"
                           FontFamily="Segoe WP Light"
                           Foreground="White"
                           FontWeight="SemiLight"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid x:Name="LayoutRoot" DataContext="{Binding}">

        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

       
        <Hub x:Name="MyHub" Grid.Row="1" Margin="10,9.5,10,5" Header="techtatva" DataContext="{Binding}">
            <Hub.HeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" CharacterSpacing="{StaticResource HubSectionHeaderCharacterSpacing}" FontSize="60" FontFamily="Segoe WP SemiLight" Margin="0, 9, 0,0" Foreground="{StaticResource AppAccentColorBrush}"/>
                </DataTemplate>
            </Hub.HeaderTemplate>

            <!--<Hub.Background>
                <ImageBrush ImageSource="/Assets/back.jpg" Stretch="UniformToFill" Opacity="0.3"/>
            </Hub.Background>-->


            <HubSection x:Name="Events" Header="events" DataContext="{Binding}">
                <DataTemplate>
                    <ListView x:ConnectionId='1' x:Name="List1" SelectionMode="None" IsItemClickEnabled="True"                         ItemsSource="{Binding Days}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding day}" TextAlignment="Center" VerticalAlignment="Center" Margin="10,10,0,5" FontFamily="Segoe WP Light" FontSize="30" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </DataTemplate>
            </HubSection>

            <HubSection x:Name="Results" Header="results" DataContext="{Binding Results}">
                <DataTemplate>
                    <ListView x:Name="List2" SelectionMode="None" IsItemClickEnabled="True" ItemsSource="{Binding}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                                    <Image Source="{Binding Image}" Stretch="Fill" Height="51" Width="51"></Image>
                                    <TextBlock Text="{Binding EventName}" TextAlignment="Center" VerticalAlignment="Center" Margin="20,0,0,0" FontFamily="Segoe WP Light" FontSize="22" ></TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </DataTemplate>
            </HubSection>

            <HubSection x:Name="Insta" Header="instagram">
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Image Stretch="Fill" Margin="2.5" Source="{Binding Insta}" Grid.Row="0" Grid.Column="0"/>
                        <Image Stretch="Fill" Margin="2.5" Source="{Binding Insta}" Grid.Row="0" Grid.Column="1"/>
                        <Image Stretch="Fill" Margin="2.5" Source="{Binding Insta}" Grid.Row="0" Grid.Column="2"/>
                        <Image Stretch="Fill" Margin="2.5" Source="{Binding Insta}" Grid.Row="0" Grid.Column="3"/>
                        <Image Stretch="Fill" Margin="2.5" Source="{Binding Insta}" Grid.Row="1" Grid.Column="0"/>
                        <Image Stretch="Fill" Margin="2.5" Source="{Binding Insta}" Grid.Row="1" Grid.Column="1"/>
                        <Image Stretch="Fill" Margin="2.5" Source="{Binding Insta}" Grid.Row="1" Grid.Column="2"/>
                        <Image Stretch="Fill" Margin="2.5" Source="{Binding Insta}" Grid.Row="1" Grid.Column="3"/>
                        <Image Stretch="Fill" Margin="2.5" Source="{Binding Insta}" Grid.Row="2" Grid.Column="0"/>
                        <Image Stretch="Fill" Margin="2.5" Source="{Binding Insta}" Grid.Row="2" Grid.Column="1"/>
                        <Image Stretch="Fill" Margin="2.5" Source="{Binding Insta}" Grid.Row="2" Grid.Column="2"/>
                        <Image Stretch="Fill" Margin="2.5" Source="{Binding Insta}" Grid.Row="2" Grid.Column="3"/>
                    </Grid>
                </DataTemplate>
            </HubSection>

            <HubSection x:Name="Register" Header="register">
                <DataTemplate>
                    <ListView x:Name="List4" SelectionMode="None" IsItemClickEnabled="True">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                                    <Image Source="{Binding Image}" Stretch="Fill" Height="51" Width="51"></Image>
                                    <TextBlock Text="{Binding Name}" TextAlignment="Center" VerticalAlignment="Center" Margin="20,0,0,0" FontFamily="Segoe WP Light" FontSize="22" ></TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </DataTemplate>
            </HubSection>

            <HubSection x:Name="Online_Events" Header="online events">
                <DataTemplate>
                    <ListView x:Name="List4" SelectionMode="None" IsItemClickEnabled="True" >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                                    <Image Source="{Binding Image}" Stretch="Fill" Height="51" Width="51"></Image>
                                    <TextBlock Text="{Binding Name}" TextAlignment="Center" VerticalAlignment="Center" Margin="20,0,0,0" FontFamily="Segoe WP Light" FontSize="22" ></TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </DataTemplate>
            </HubSection>
        </Hub>
    </Grid>
</Page>

