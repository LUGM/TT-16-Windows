<Page
    x:Class="Tech_Tatva__16.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Tech_Tatva__16.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{StaticResource BackgroundBrush}"
    DataContext="{Binding DefaultViewModel , RelativeSource={RelativeSource Self}}">

    
    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.SecondaryCommands>
                <AppBarButton x:Name="Fav" Label="favourites"/>
                <AppBarButton x:Name="Res" Label="results"/>
                <AppBarButton x:Name="Dev" Label="developers"/>
                <AppBarButton x:Name="Abt" Label="about"/>
            </CommandBar.SecondaryCommands>
            <AppBarButton Icon="Refresh" Label="refresh"/>
        </CommandBar>
    </Page.BottomAppBar>

    <Page.Resources>
        <Style TargetType="HubSection">
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"
                           FontSize="30"
                           FontFamily="Segoe WP Light"
                           Foreground="White"
                           FontWeight="SemiLight"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid x:Name="LayoutRoot" DataContext="{Binding}">

        <Grid.ChildrenTransitions>
            <TransitionCollection>
                <EntranceThemeTransition/>
            </TransitionCollection>
        </Grid.ChildrenTransitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

       
        <Hub x:Name="MyHub" Grid.Row="1" Margin="10,9.5,10,0" Header="techtatva" DataContext="{Binding}">
            <Hub.HeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" CharacterSpacing="{StaticResource HubSectionHeaderCharacterSpacing}" FontSize="60" FontFamily="Segoe WP SemiLight" Margin="0, 9, 0,0" Foreground="{StaticResource AppAccentColorBrush}"/>
                </DataTemplate>
            </Hub.HeaderTemplate>

            <Hub.Background>
                <ImageBrush ImageSource="/Assets/techtatva15.png" Stretch="UniformToFill" Opacity="0.3"/>
            </Hub.Background>


            <HubSection x:Name="Day1" Header="DAY 1" DataContext="{Binding Events}">
                <DataTemplate>
                    <ListView x:ConnectionId='4' x:Name="List1" SelectionMode="None" IsItemClickEnabled="True"                           ItemsSource="{Binding}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                                    <Image Source="{Binding Image}" Stretch="Fill" Height="51" Width="51"></Image>
                                    <TextBlock Text="{Binding Name}" TextAlignment="Center" VerticalAlignment="Center" Margin="20,0,0,0" FontFamily="Segoe WP Light" FontSize="22" ></TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </DataTemplate>
            </HubSection>

            <HubSection x:Name="Day2" Header="DAY 2">
                <DataTemplate>
                    <ListView x:ConnectionId='3' x:Name="List2" SelectionMode="None" IsItemClickEnabled="True"                          >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                                    <Image Source="{Binding Image}" Stretch="Fill" Height="51" Width="51"></Image>
                                    <TextBlock Text="{Binding Name}" TextAlignment="Center" VerticalAlignment="Center" Margin="20,0,0,0" FontFamily="Segoe WP Light" FontSize="22" ></TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </DataTemplate>
            </HubSection>

            <HubSection x:Name="Day3" Header="DAY 3">
                <DataTemplate>
                    <ListView x:ConnectionId='2' x:Name="List3" SelectionMode="None" IsItemClickEnabled="True"                          >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                                    <Image Source="{Binding Image}" Stretch="Fill" Height="51" Width="51"></Image>
                                    <TextBlock Text="{Binding Name}" TextAlignment="Center" VerticalAlignment="Center" Margin="20,0,0,0" FontFamily="Segoe WP Light" FontSize="22" ></TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </DataTemplate>
            </HubSection>

            <HubSection x:Name="Day4" Header="DAY 4">
                <DataTemplate>
                    <ListView x:ConnectionId='1' x:Name="List4" SelectionMode="None" IsItemClickEnabled="True"                          >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                                    <Image Source="{Binding Image}" Stretch="Fill" Height="51" Width="51"></Image>
                                    <TextBlock Text="{Binding Name}" TextAlignment="Center" VerticalAlignment="Center" Margin="20,0,0,0" FontFamily="Segoe WP Light" FontSize="22" ></TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </DataTemplate>
            </HubSection>
        </Hub>
    </Grid>
</Page>

